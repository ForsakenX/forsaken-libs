#!/bin/bash -x
cd "$(dirname -- "$0")"
v=SDL-2.0
f=SDL-2.0.0-6754
tar -xvzf $v.tar.gz
(
	cd $f
	./configure --prefix= && make install DESTDIR=$PWD/../.. \
		LDFLAGS=' -L/usr/lib/i386-linux-gnu/mesa' # this is benign if not on linux
) || exit 1
cp pkgconfig/sdl2.pc ../lib/pkgconfig/
echo "Built: sdl"
